@model CastleLibrary.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Title</h1>
<h4>@Model.Author.Name</h4>

<div>    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsAvailable)
        </dt>
        <dd class="col-sm-10">
            @(Model.IsAvailable ? "Yes" : "No")
        </dd>
        @if (!Model.IsAvailable)
        {
            <dt class="col-sm-2">
                Taken Out By
            </dt>
            <dd class="col-sm-10">
                <a asp-controller="LibraryUsers" asp-action="Details" asp-route-id="@Model.BorrowedBy.ID">@Html.DisplayFor(model => model.BorrowedBy.Name)</a>
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DueInDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DueInDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.YearPublished)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YearPublished)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
